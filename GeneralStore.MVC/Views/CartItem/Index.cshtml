@model IEnumerable<GeneralStore.MVC.Models.CartItem>

@{
    ViewBag.Title = "Index";
}

<h2>Shopping Cart</h2>
@Html.ValidationMessage("CartEmpty", new { @class = "text-danger" })

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Product.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductCount)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductCount)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CartItemID }) |
                @Html.ActionLink("Remove", "Delete", new { id = item.CartItemID })
            </td>
        </tr>
    }
</table>

@{
    if (Model.ToList().Count > 0)
    {
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button"
                       value="Complete Purchase"
                       onclick="location.href='@Url.Action("CompletePurchase", "CartItem")'"
                       class="btn btn-primary" />
            </div>
        </div>
    }
}
